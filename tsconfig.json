{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": true,
    "checkJs": false
  },
  "include": ["index.js", "src/**/*.js"],
  "exclude": ["node_modules", "test", "example"]
}
